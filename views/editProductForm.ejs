<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title%>
    </title>
    <link rel="stylesheet" href=/styles.css>
</head>

<body>
    <div class="body-container">
        <%- include("categories")%>
            <div class="main-container">
                <%- include("header")%>
                    <div class="form-container">
                        <form class="form" action="/food/<%= product.id%>/editProduct" method="POST">
                            <div>
                                <select name="category">
                                    <% categories.forEach((category)=> {%>
                                        <option value="<%=category.id%>" <%=product.category_id===category.id
                                            ? "selected" : "" %> >
                                            <%= category.category_name%>
                                        </option>
                                        <%})%>
                                </select>
                            </div>
                            <div>
                                <label for="foodName">Enter the name of the food</label>
                                <input type="text" value="<%= product.food_name%>" name="foodName" id="foodName" />
                            </div>
                            <div>
                                <label for="foodDesc">Enter the product description</label>
                                <input type="text" value="<%= product.food_description%>" name="foodDesc"
                                    id="foodDesc" />
                            </div>
                            <button class="btn-2" type="submit">Save</button>
                            <a class="btn-2" href="/food/<%= product.id%>">Cancel</a>
                        </form>
                        <%- include("partials/errors.ejs")%>
                    </div>
            </div>
    </div>


</body>

</html>